<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>${APP_NAME}</Name>
    <Version>${APP_VERSION}</Version>
    <Title>${APP_NAME} installer</Title>
    <Publisher>${ORG_NAME}</Publisher>
    <ProductUrl>${APP_URL}</ProductUrl>
    <StartMenuDir>${ORG_NAME}</StartMenuDir>
    <TargetDir>@HomeDir@/@Publisher@/@ProductName@/</TargetDir>
    <AdminTargetDir>@ApplicationsDir@/@Publisher@/@ProductName@/</AdminTargetDir>
    <MaintenanceToolName>Uninstall</MaintenanceToolName>
    <InstallerWindowIcon>installericon</InstallerWindowIcon>
    <InstallerApplicationIcon>installericon</InstallerApplicationIcon>
    <ControlScript>control.qs</ControlScript>
    <AllowSpaceInPath>true</AllowSpaceInPath>

    <RemoteRepositories>
        <Repository>
		<Url>${ORG_URL}/DATA/applications/${APP_NAME_LOWER}/packages${APP_DEVELOP}/windows</Url>
            <DisplayName>Main Repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
